# Wave Terminal Docker Environment Configuration
# Copy this file to .env and customize as needed

# Node.js Environment
NODE_ENV=development

# Wave Terminal Configuration
WAVETERM_DEV_MODE=true
WAVETERM_LOG_LEVEL=debug

# Wave Cloud Configuration (Development)
WCLOUD_ENDPOINT=https://api-dev.waveterm.dev/central
WCLOUD_WS_ENDPOINT=wss://wsapi-dev.waveterm.dev/

# Database Configuration
POSTGRES_DB=waveterm
POSTGRES_USER=waveterm
POSTGRES_PASSWORD=waveterm
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Build Configuration
USE_SYSTEM_FPM=1
CGO_ENABLED=1

# Development Ports (change if you have conflicts)
VITE_DEV_PORT=3000
VITE_ALT_PORT=5173
STORYBOOK_PORT=6006
DOCS_PORT=3001
WAVESRV_HTTP_PORT=8080
WAVESRV_WS_PORT=8081
POSTGRES_PORT=5432

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Git Configuration (for containers)
GIT_AUTHOR_NAME=Wave Terminal Developer
GIT_AUTHOR_EMAIL=developer@waveterm.dev
GIT_COMMITTER_NAME=Wave Terminal Developer
GIT_COMMITTER_EMAIL=developer@waveterm.dev

# Debugging
DEBUG=false
VERBOSE=false

# Hot Reload Configuration
FAST_REFRESH=true
WATCHPACK_POLLING=true

# Performance
NODE_OPTIONS=--max-old-space-size=4096